{
    "properties": {
        "displayName": "Use approved vNet for VM network interfaces",
        "description": "This policy enforces VM network interfaces to use vNets in specifc resource group",
        "parameters": {
            "rgName": {
                "type": "string",
                "metadata": {
                    "description": "Resource Group that contains the vNets",
                    "displayName": "Resource Group Name"
                }
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/networkInterfaces"
                    },
                    {
                        "not": {
                            "field": "Microsoft.Network/networkInterfaces/ipconfigrations[*].subnet.id",
                            "contains": "[concat('resourcegroups/',parameters('rgName'))]"
                        }
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}