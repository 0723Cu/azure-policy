{
   "properties": {
      "displayName": "Ensure network watcher is created",
      "description": "This policy automatically creates a network watcher instance for virtual networks if        one does not exist.",
      "policyRule": {
         "if": {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
         },
         "then": {
            "effect": "DeployIfNotExists",
            "details": {
               "type": "Microsoft.Network/networkWatchers",
               "resourceGroupName": "networkWatcherRG", 
               "existenceCondition": {
                  "field": "location",
                  "equals": "[field('location')]"
               }, 
               "deployment": {
                  "mode": "incremental",
                  "properties": {
                     "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                     "contentVersion": "1.0.0.0",
                     "resources": [{
                        "api-version": "2016-09-01",
                        "type": "Microsoft.Network/networkWatchers",
                        "name": "[concat('networkWacher_', field('location'))]",
                        "location": "[field('location')]" 
                     }]
                  }
               }            
            }
         }
      }
   },
   "id": "/providers/Microsoft.Authorization/policyDefinitions/682eb47e-9399-4a69-87fe-8be4c8c29759",
   "type": "Microsoft.Authorization/policyDefinitions",
   "name": "682eb47e-9399-4a69-87fe-8be4c8c29759"
}

